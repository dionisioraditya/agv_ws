<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="agv">

    <xacro:arg name="is_ignition" default="true" /> 

    <!-- Include Gazebo Parameters-->
    <xacro:include filename="$(find agv_description)/urdf/agv_gazebo.xacro"/>
    
    <!-- ROS 2 Control -->
    <xacro:include filename="$(find agv_description)/urdf/agv_ros2_control.xacro"/>

    <link name="base_footprint"/>

    
    <link name="base_link">
        <inertial>
            <origin xyz="0.0 0.0 0.904348"/>
            <mass value="3.0"/>
            <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.0325" iyz="0" izz="0.0325" />
        </inertial>
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://agv_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>            
        </visual>
        <collision>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://agv_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>   
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.315"/>
    </joint>


    <link name="wheel_right_link">
        <inertial>
            <origin xyz="0.0 -0.014 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0530086090966721"/>
            <inertia ixx="0.00000304" ixy="0.0" ixz="0.0" iyy="0.0000052" iyz="0.0" izz="0.00000304"/>
        </inertial>
        
        <visual>
            <origin rpy="1.570796 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://agv_description/meshes/wheel_right_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.570796 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://agv_description/meshes/wheel_right_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>
    
    <joint name="wheel_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_right_link"/>
        <axis xyz="0.0 1.0 0.0"/>
        <origin rpy="0.0 0.0 -1.570796" xyz="-1.55 1.22 0.0"/>
    </joint>


    <link name="wheel_left_link">
        <inertial>
            <origin xyz="0.0 0.014 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0530086090966721"/>
            <inertia ixx="0.00000304" ixy="0.0" ixz="0.0" iyy="0.0000052" iyz="0.0" izz="0.00000304"/>
        </inertial>

        <visual>
            <origin rpy="1.570796 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://agv_description/meshes/wheel_right_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.570796 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://agv_description/meshes/wheel_right_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>
    <joint name="wheel_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_left_link"/>
        <axis xyz="0.0 1.0 0.0"/>
        <origin rpy="0.0 0.0 1.570796" xyz="1.55 1.22 0.0"/>
    </joint>



    <link name="caster_link">

        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0.0001" ixz="0.0001" iyy="0.0001" iyz="0.0001" izz="0.0001"/>
        </inertial>

        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://agv_description/meshes/caster_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://agv_description/meshes/caster_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>
    <joint name="caster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_link"/>
        <axis xyz="0.0 0.0 0.0"/>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 -0.95 -0.261"/>
    </joint>
</robot>